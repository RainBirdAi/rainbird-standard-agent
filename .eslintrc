{
    "rules": {
        "indent": [2, 4],
        "keyword-spacing": [2],
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"],
        "semi": [2,"always"],
        "no-console": [2]
    },
    "env": {
        "node": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "define": false,
      "inject": false,
      "describe": false,
      "sinon": false,
      "expect": false,
      "assert": false,
      "it": false,
      "before": false,
      "beforeEach": false,
      "after": false,
      "afterEach": false,
      "angular": false,
      "$": false
    }

}
